@{
    @model InvestorInfo
}

<div class="row editorRow">
    <div class="col-md-4">
        @Html.TextBoxFor(m => m.Name, new { placeholder = "Name", @class = "form-control mt-1" })
    </div>
    <div class="col-md-4">

        @Html.TextBoxFor(m => m.RequestAmount, new { placeholder = "Requested Amount", @class = "form-control mt-1" })
    </div>
    <div class="col-md-4">
        @Html.TextBoxFor(m => m.AveragAmount, new { placeholder = "Average Amount", @class = "form-control mt-1" })
    </div>
</div>